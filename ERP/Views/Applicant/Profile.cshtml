     Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6">
            <div class="well well-sm">
                <div class="row">
                   
                    <div class="col-sm-6 col-md-8">
                        <h4 id="name"> Bhaumik Patel</h4>
                        <small>
                            <cite id="email" title="">
                            </cite>
                        </small>
                        <p id="email"></p>
                        <p id="cnic"></p>
                        <p id="phone1"></p>
                        <p id="phone2"></p>



                        <p id="dob">
                        </p>
