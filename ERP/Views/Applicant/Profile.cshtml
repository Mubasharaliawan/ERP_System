                    </div>
                </div>
            </div>
        </div>
    </div>


    <div>
        <button class="btn btn-danger" id="logout">
            Logout
        </button>
    </div>
</div>

    <script type="text/javascript" src="~/js/jquery/jquery.min.js"></script>

<script>
    $("#logout").click(function(){
         $.ajax({
          url: "/Applicant/ApplicantProfileLogout",
          type: "post",
           dataType: 'JSON',
                     contentType: "application/x-www-form-urlencoded;charset=utf-8",

          cache: false,

         
          success: function (response) {
              
              if(response!=null){
                  if(response.messageType==true){
                    location.reload();
                  
                   
                     
            }
              }
        },
        error: function(jqXHR, textStatus, errorThrown) {
           console.log(textStatus, errorThrown);
                        alert(textStatus+"Error");

        }
    });
    });

    $(document).ready(function(){
        
     $.ajax({
          url: "/Applicant/ApplicantProfile",
          type: "get",
           dataType: 'JSON',
                     contentType: "application/x-www-form-urlencoded;charset=utf-8",

          cache: false,

         
          success: function (response) {
              
              if(response!=null){
                  if(response.messageType==true){
                    
                      var res=response.result;
                       
                     $.each(JSON.parse(res),function(key,value){
                         $("#name").html(value.ap_name);
                         $("#email").html(value.ap_email);
                         $("#cnic").html(value.ap_cnic);
                         $("#phone1").html(value.ap_phone1);
                         $("#phone2").html(value.ap_phone2);
                         $("#dob").html(value.ap_dob);

                     });

                }
                   
                     
            }

        },
        error: function(jqXHR, textStatus, errorThrown) {
           console.log(textStatus, errorThrown);
                        alert(textStatus+"Err");

        }
    });
   
   //  });

    });

</script>
